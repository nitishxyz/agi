{
  "name": "@agi-cli/core",
  "version": "0.1.12",
  "description": "AI-powered development assistant CLI",
  "author": "nitishxyz",
  "license": "MIT",
  "homepage": "https://github.com/nitishxyz/agi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitishxyz/agi.git"
  },
  "bugs": {
    "url": "https://github.com/nitishxyz/agi/issues"
  },
  "keywords": [
    "ai",
    "cli",
    "development",
    "assistant",
    "commit",
    "code-review",
    "gemini",
    "anthropic",
    "gpt"
  ],
  "type": "module",
  "module": "index.ts",
  "bin": {
    "agi": "cli.cjs"
  },
  "files": [
    "cli.cjs",
    "scripts",
    "src/",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run compile",
    "catalog:update": "bun run scripts/update-catalog.ts",
    "cli": "bun run index.ts",
    "compile": "mkdir -p dist && bun build --compile ./index.ts --outfile dist/agi",
    "build:bin": "bun build --compile ./index.ts --outfile dist/agi",
    "build:bin:all": "bun run build:bin:darwin-arm64 && bun run build:bin:darwin-x64 && bun run build:bin:linux-x64 && bun run build:bin:linux-arm64 && bun run build:bin:windows-x64",
    "build:bin:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 ./index.ts --outfile dist/agi-darwin-arm64",
    "build:bin:darwin-x64": "bun build --compile --target=bun-darwin-x64 ./index.ts --outfile dist/agi-darwin-x64",
    "build:bin:linux-arm64": "bun build --compile --target=bun-linux-arm64 ./index.ts --outfile dist/agi-linux-arm64",
    "build:bin:linux-x64": "bun build --compile --target=bun-linux-x64 ./index.ts --outfile dist/agi-linux-x64",
    "build:bin:windows-x64": "bun build --compile --target=bun-windows-x64 ./index.ts --outfile dist/agi-windows-x64.exe",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:reset": "bun run scripts/reset-db.ts",
    "lint": "biome check",
    "test": "bun test",
    "version:bump": "bun run scripts/bump-version.ts",
    "postinstall": "node scripts/postinstall.cjs || true",
    "prepack": "chmod +x cli.cjs || true"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.16",
    "@ai-sdk/google": "^2.0.14",
    "@ai-sdk/openai": "^2.0.30",
    "@clack/prompts": "^0.11.0",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "ai": "^5.0.43",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.7",
    "opencode-anthropic-auth": "^0.0.2",
    "sst": "3.17.13",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/aws-lambda": "8.10.152",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
