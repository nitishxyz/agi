{
	"name": "@agi-cli/core",
	"version": "0.1.0",
	"description": "Core primitives for AGI CLI - tools, providers, streaming",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		},
		"./tools/builtin/fs": {
			"import": "./src/tools/builtin/fs/index.ts",
			"types": "./src/tools/builtin/fs/index.ts"
		},
		"./tools/builtin/git": {
			"import": "./src/tools/builtin/git.ts",
			"types": "./src/tools/builtin/git.ts"
		}
	},
	"scripts": {
		"dev": "bun run src/index.ts",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@agi-cli/auth": "workspace:*",
		"@agi-cli/config": "workspace:*",
		"@agi-cli/database": "workspace:*",
		"@agi-cli/providers": "workspace:*",
		"@agi-cli/prompts": "workspace:*",
		"ai": "^5.0.43",
		"@ai-sdk/anthropic": "^2.0.16",
		"@ai-sdk/openai": "^2.0.30",
		"@ai-sdk/google": "^2.0.14",
		"@openrouter/ai-sdk-provider": "^1.2.0",
		"@ai-sdk/openai-compatible": "^1.0.18",
		"hono": "^4.9.7",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5"
	}
}
