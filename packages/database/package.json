{
	"name": "@ottocode/database",
	"version": "0.1.185",
	"description": "Database and persistence layer for ottocode",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		},
		"./schema": {
			"import": "./src/schema.ts",
			"types": "./src/schema.ts"
		}
	},
	"scripts": {
		"dev": "bun run src/index.ts",
		"test": "bun test",
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@ottocode/sdk": "workspace:*",
		"drizzle-orm": "^0.44.5"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.4",
		"typescript": "^5"
	}
}
