{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "otto",
  "version": "0.1.23",
  "identifier": "io.ottocode.otto",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "otto",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#141318",
        "titleBarStyle": "Overlay",
        "decorations": true,
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 10,
          "y": 21.5
        },
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app",
      "msi",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/binaries/*"
    ]
  }
}
