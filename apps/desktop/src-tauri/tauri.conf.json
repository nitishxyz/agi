{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "AGI",
	"version": "0.1.18",
	"identifier": "sh.nitish.agi",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "AGI",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"backgroundColor": "#141318",
				"titleBarStyle": "Overlay",
				"decorations": true,
				"hiddenTitle": true,
				"trafficLightPosition": {
					"x": 10,
					"y": 20
				},
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["dmg", "app", "msi", "appimage"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": ["resources/binaries/*"]
	}
}
