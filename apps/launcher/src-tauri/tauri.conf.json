{
	"$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "otto-launcher",
	"version": "0.1.15",
	"identifier": "io.ottocode.launcher",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:1430",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "otto launcher",
				"width": 520,
				"height": 680,
				"minWidth": 480,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"backgroundColor": "#141318",
				"titleBarStyle": "Overlay",
				"decorations": true,
				"hiddenTitle": true,
				"dragDropEnabled": true,
				"trafficLightPosition": {
					"x": 10,
					"y": 21.5
				}
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"createUpdaterArtifacts": true,
		"targets": ["dmg", "app", "msi", "nsis", "deb", "appimage"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"dangerousInsecureTransportProtocol": true,
			"endpoints": [
				"https://github.com/nitishxyz/otto/releases/download/launcher-latest/latest.json"
			],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhCMkYyRTNBRUIwQ0VBQTkKUldTcDZnenJPaTR2aXhNWlJQbmovSWs5aU5EeWYvVk4wODdEVjVQQmJBaVAzYmZjYWhIdmFoVGwK"
		}
	}
}
