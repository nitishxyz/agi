---
import '../index.css';
import { Nav } from '../components/Nav';
import { Footer } from '../components/Footer';

interface Props {
	title?: string;
	description?: string;
	isDocs?: boolean;
}

const {
	title = 'otto — AI-powered coding assistant',
	description = 'AI-powered coding assistant. CLI, desktop app, embeddable server — one tool, multiple interfaces. Open source.',
	isDocs = false,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<script is:inline>
			(function(){var t=localStorage.getItem('otto-theme');if(t==='light')return;if(t==='dark'||window.matchMedia('(prefers-color-scheme:dark)').matches)document.documentElement.classList.add('dark')})();
		</script>
		<div class="min-h-screen bg-otto-bg font-mono">
			<Nav client:load pathname={Astro.url.pathname} />
			<slot />
			<div class={isDocs ? 'lg:ml-64' : ''}>
				<Footer />
			</div>
		</div>
	</body>
</html>
